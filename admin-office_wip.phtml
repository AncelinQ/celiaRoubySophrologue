                                    //SI LE CRENEAU N'EXISTE PAS DANS LA TABLE 'RDV' ET QUE LA DATE EST ANTÉRIEUR À AUJOURD'HUI ON AJOUTE LA CLASSE UNAVTIME//
                                    elseif (!isset($weekRdvs[$calendar->getTimeSlotId($day) . ' ' . $calendar->timeSlots[$timeSlot] . ":00"]) && $calendar->getTimeSlotId($day) <= $calendar->getDayToday()): ?>
