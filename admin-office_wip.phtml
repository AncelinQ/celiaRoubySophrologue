                                    <?php
                                    //SINON ON AJOUTE LA CLASS ADMINAVTIME//
                                    else : ?>
                                        class="adminAvTime adminTimeSlot <?= $calendar->getTimeSlotId($day); ?>"
                                    <?php endif; ?>
                                       name="<?= $calendar->getDayName($day); ?> <?= $calendar->getDayNumber($day); ?> <?= $calendar->getMonthName($day); //ON RÉCUPERE LE NOM ET LE NUMERO DU JOUR AINSI QUE LE MOIS POUR LE NAME EX : JEUDI 08 AVRIL//?>"
                                       value="<?= $calendar->timeSlots[$timeSlot]; ?>">
                                <?php
                                //SI LE CRENEAU EXISTE DANS LA TABLE 'RDV' ON AJOUTE UN BOUTON DELETE À CÔTÉ DU CRÉNEAU AVEC LE NAME QUI CORRESPOND À L'ID DU CRÉNEAU//
