                            if (!isset(rdvClass::getDayAvailability($calendar->getTimeSlotId($day))[7]) && ($calendar->getTimeSlotId($day) > $calendar->getDayToday())): ?>
                                class="adminDaySwitch dayOn"
                            <?php
                            //SI LE JOUR EST INFÉRIEUR OU EGAL À AUJOURD'HUI, LE JOUR EST PASSÉ //
                            elseif (($calendar->getTimeSlotId($day) <= $calendar->getDayToday())): ?>
                                class="adminDaySwitch dayPast"
                            <?php
                            //SINON LE JOUR EST INDISPONIBLE//
                            else : ?>
                                class="adminDaySwitch dayOff"
                            <?php endif; ?>
                                name="<?= $calendar->getTimeSlotId($day); //ON RÉCUPÈRE LES INFOS DU JOUR POUR LE NAME//?>">
                            <!--ON RÉCUPÈRE LES NOMS NUMEROS ET MOIS ET ON LES AFFICHE-->
                            <span class='bold block'> <?= $calendar->getDayNameCal($day); ?> </span>
