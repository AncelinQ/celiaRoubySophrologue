                                    <input type="button" class="rdvDelete"
                                           name="<?= $calendar->getTimeSlotId($day) . ' ' . $calendar->timeSlots[$timeSlot]; ?>:00"
                                           value="x">
                                <?php endif; ?>
                            </td>
                        <?php endfor; ?>
                    </tr>
